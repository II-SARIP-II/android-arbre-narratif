<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootEndLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/babyPowder"
    android:padding="16dp">

    <!-- Image Dynamique Basée sur le Score -->
    <ImageView
        android:id="@+id/scoreImageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:contentDescription="@string/score_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/img_high_score" />

    <!-- Texte de Conclusion -->
    <TextView
        android:id="@+id/endTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Fin de l'histoire !"
        android:textColor="@color/hunterGreen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/font_eco"
        app:layout_constraintTop_toBottomOf="@id/scoreImageView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- Texte du Score Éco -->
    <TextView
        android:id="@+id/scoreTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Score Éco : 10"
        android:textColor="@color/darkGreen"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:fontFamily="@font/font_eco"
        app:layout_constraintTop_toBottomOf="@id/endTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Barre de Progression Éco -->
    <ProgressBar
        android:id="@+id/ecoProgressBar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:progress="75"
        android:max="20"
        android:progressTint="@color/hunterGreen"
        android:background="@color/fieldDrab"
        app:layout_constraintTop_toBottomOf="@id/scoreTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Texte d'Appréciation -->
    <TextView
        android:id="@+id/appreciationTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Tu as été très écoresponsable !"
        android:textColor="@color/darkGreen"
        android:textSize="18sp"
        android:textStyle="italic"
        android:gravity="center"
        android:fontFamily="@font/font_eco"
        app:layout_constraintTop_toBottomOf="@id/ecoProgressBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"/>

    <!-- Bouton de Recommencement -->
    <Button
        android:id="@+id/restartButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/restart_button"
        android:background="@drawable/button_background_restart"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:fontFamily="@font/font_eco"
    android:layout_marginTop="24dp"
    app:layout_constraintTop_toBottomOf="@id/appreciationTextView"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Bouton pour Voir les Détails du Score -->
    <Button
        android:id="@+id/detailsButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Voir les détails"
        android:background="@drawable/button_background_details"
    android:textColor="@color/white"
    android:textSize="16sp"
    android:fontFamily="@font/font_eco"
    android:layout_marginTop="16dp"
    app:layout_constraintTop_toBottomOf="@id/restartButton"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
